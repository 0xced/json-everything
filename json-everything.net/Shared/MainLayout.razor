@using JsonEverythingNet.Services
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="@Redirects.Slack" class="mr-3 no-underline" data-toggle="tooltip" data-placement="bottom" title="Discuss in Slack" target="_blank">
                <img src="img/slack.png" alt="Discuss in Slack"/>
            </a>
            <a href="@Redirects.Github" asp-action="Github" class="mr-3 no-underline" data-toggle="tooltip" data-placement="bottom" title="View on GitHub" target="_blank">
                <img src="img/github.png" alt="View on GitHub"/>
            </a>
            <a href="@Redirects.Documentation" asp-action="Documentation" class="no-underline" data-toggle="tooltip" data-placement="bottom" title="Library Docs" target="_blank">
                <img src="img/scroll-icon.png" alt="Library Docs"/>
            </a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
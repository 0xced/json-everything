@using JsonEverythingNet.Models
<div class="bubble-field" style="height: @(Height)px">
	@foreach (var item in Data)
	{
		<SponsorBubble Username="@item.Username"
		               AvatarUrl="@item.AvatarUrl?.OriginalString"
		               WebsiteUrl="@item.WebsiteUrl?.OriginalString"
		               Size="@item.BubbleSize"
		               X="@item.X"
		               Y="@item.Y">
		</SponsorBubble>
	}
</div>

@code {
	[Parameter]
	public IReadOnlyList<SponsorData> Data { get; set; } = [];

	private int Height => Data.Count == 0
		? 0
		: (int)Math.Abs(Data.Max(x => x.Y + GetBubbleRadius(x.BubbleSize)) -
		                Data.Min(x => x.Y - GetBubbleRadius(x.BubbleSize)));

	int GetBubbleRadius(BubbleSize size) =>
		size switch
		{
			BubbleSize.Small => 25,
			BubbleSize.Medium => 50,
			BubbleSize.Large => 100,
			_ => throw new ArgumentOutOfRangeException(nameof(size), size, null)
		};

}
